<Window x:Class="ModularSynth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModularSynth"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" 
        DataContext="{Binding Source={StaticResource Locator}, Path=MainViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="startStopSinBtn"
                Grid.Column="0" Grid.Row="0"
                Margin="10"
                Content="Start Stop Sin"
                Command="{Binding StartStopSinCommand}"/>

        <StackPanel Orientation="Vertical"
                    Grid.Row="1" Grid.Column="0">
            
            <Label Content="Frequency:"/>

            <Slider x:Name="frequencySlider"                
                Minimum="300" Maximum="10000"
                Value="{Binding Frequency, Mode=TwoWay}"/>

            <Label Content="Amplitude:"/>

            <Slider x:Name="amplitudeSlider"                
                Minimum="0" Maximum="1"
                Value="{Binding Amplitude, Mode=TwoWay}"/>

        </StackPanel>
                    
        


    </Grid>
</Window>
